        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="여기에 이름을 입력하세요 한줄로 나타납니다 알겠습니까?????"
        android:textSize="40sp" />
</LinearLayout>